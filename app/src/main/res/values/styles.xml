<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="large_letters" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="heading_letters" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="small_letters" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#80000000</item>
    </style>
    <style name="description" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#A6000000</item>
    </style>
    <style name="close_favorite" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">20dp</item>
        <item name="iconTint">#000000</item>
        <item name="shapeAppearanceOverlay">@style/SmallShapeAppearance</item>
    </style>
    <style name="SmallShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>